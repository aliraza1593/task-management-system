<div class="max-w-xl mx-auto mt-10 bg-white p-6 rounded shadow">
  <h1 class="text-2xl font-bold text-center mb-4">Create New Task</h1>

  <%= form_with(model: @task, local: true, class: "space-y-4") do |f| %>
    <div>
      <%= f.label :title, class: "block text-gray-700 font-semibold" %>
      <%= f.text_field :title, class: "w-full p-2 border border-gray-300 rounded mt-1", required: true %>
    </div>

    <button type="button" class="bg-gray-500 text-white px-3 py-1 rounded" id="add-subtask">+ Add Subtask</button>

    <div class="mt-4">
      <%= f.submit "Create Task", class: "w-full bg-green-500 text-white px-4 py-2 rounded shadow" %>
    </div>
  <% end %>
</div>
